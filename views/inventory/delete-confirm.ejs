<div class="inv-add-inventory">
  <% if (locals.messages) { %>
    <div class="flash-messages">
      <%- messages() %>
    </div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="notice">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <h1><%= title %></h1>
  <p>Confirm Deletion â€“ The delete is permanent.</p>

  <!-- Note: posts to /inv/delete to match the POST route -->
  <form action="/inv/delete" method="post" class="inv-add-form">

    <!-- Year -->
    <div class="form-group">
      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        value="<%= inv_year || '' %>"
        readonly
      >
    </div>

    <!-- Make -->
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        value="<%= inv_make || '' %>"
        readonly
      >
    </div>

    <!-- Model -->
    <div class="form-group">
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        value="<%= inv_model || '' %>"
        readonly
      >
    </div>

    <!-- Price -->
    <div class="form-group">
      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        value="<%= inv_price || '' %>"
        readonly
      >
    </div>

    <!-- Hidden primary key for delete -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <!-- Submit button: Delete -->
    <button type="submit" class="btn btn-primary">
      Delete Vehicle
    </button>
  </form>
</div>
