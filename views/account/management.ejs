<div class="account-management">

  <!-- Flash Messages -->
  <% if (locals.messages) { %>
    <div class="flash-messages">
      <%- messages() %>
    </div>
  <% } %>

  <% 
    const user = locals.accountData;
    const isStaff = user && (user.account_type === "Employee" || user.account_type === "Admin");
  %>

  <!-- Greeting -->
  <h2 class="account-greeting">Welcome <%= user.account_firstname %></h2>

  <!-- Update Account Link (ALL USERS) -->
  <p class="account-links">
    <a class="btn btn-primary account-link" href="/account/update/<%= user.account_id %>">
      Update Account Information
    </a>
  </p>

  <!-- Staff-Only Section -->
  <% if (isStaff) { %>

    <h3 class="inventory-title">Inventory Management</h3>

    <div class="inventory-links">

      <a class="btn btn-primary inventory-link" href="/inv/">
        Inventory Dashboard
      </a>

      <a class="btn btn-primary inventory-link" href="/inv/add-classification">
        Add Classification
      </a>

      <a class="btn btn-primary inventory-link" href="/inv/add-inventory">
        Add Vehicle
      </a>

    </div>

  <% } %>

</div>
