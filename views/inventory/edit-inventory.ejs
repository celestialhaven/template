<div class="inv-add-inventory inv-edit-inventory">
  <% if (locals.messages) { %>
    <div class="flash-messages">
      <%- messages() %>
    </div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="notice">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <h1><%= title %></h1>
  <p>You can modify this vehicleâ€™s information below. All fields are required.</p>

  <form
    id="updateForm"
    action="/inv/update"
    method="post"
    class="inv-add-form inv-edit-form"
  >
    <!-- Hidden ID so we know which vehicle to update -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <!-- Classification -->
    <div class="form-group">
      <label for="classification_id">Classification</label>
      <%- classificationSelect %>
    </div>

    <!-- Make -->
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        minlength="2"
        maxlength="50"
        pattern="^[A-Za-z0-9 ]+$"
        title="Only letters, numbers, and spaces."
        value="<%= inv_make || '' %>"
      >
    </div>

    <!-- Model -->
    <div class="form-group">
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        minlength="2"
        maxlength="50"
        pattern="^[A-Za-z0-9 ]+$"
        title="Only letters, numbers, and spaces."
        value="<%= inv_model || '' %>"
      >
    </div>

    <!-- Year -->
    <div class="form-group">
      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        required
        min="1200"
        max="2100"
        value="<%= inv_year || '' %>"
      >
    </div>

    <!-- Price -->
    <div class="form-group">
      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        required
        min="0"
        step="0.01"
        value="<%= inv_price || '' %>"
      >
    </div>

    <!-- Miles -->
    <div class="form-group">
      <label for="inv_miles">Miles</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        required
        min="0"
        step="1"
        value="<%= inv_miles || '' %>"
      >
    </div>

    <!-- Color -->
    <div class="form-group">
      <label for="inv_color">Color</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        minlength="3"
        maxlength="30"
        pattern="^[A-Za-z ]+$"
        title="Only letters and spaces."
        value="<%= inv_color || '' %>"
      >
    </div>

    <!-- Description -->
    <div class="form-group">
      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        minlength="10"
        maxlength="2000"
      ><%= inv_description || '' %></textarea>
    </div>

    <!-- Image path -->
    <div class="form-group">
      <label for="inv_image">Image Path</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        value="<%= inv_image || '/images/vehicles/no-image.png' %>"
      >
    </div>

    <!-- Thumbnail path -->
    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
      >
    </div>

    <!-- Submit button (enabled by inv-update.js once something changes) -->
    <button type="submit" class="btn btn-primary" disabled>
      Update Vehicle
    </button>
  </form>

  <!-- JS that enables the button when any field changes -->
  <script src="/js/inv-update.js"></script>
</div>
