<main class="account-register">
    <% if (locals.messages) { %>
        <div class="flash-messages">
            <%- messages() %>
        </div>
        <% } %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

            <h1>
                <%= title %>
            </h1>

            <section class="account-register__card">
                <p class="account-register__intro">
                    Create your account by filling in the details below. All fields are required.
                </p>

                <!-- Removed novalidate so HTML5 validation is active -->
                <form action="/account/register" method="post" class="account-register__form">
                    <!-- First Name -->
                    <div class="form-group">
                        <label for="account_firstname">First Name</label>
                        <input type="text" name="account_firstname" id="accountFirstname" placeholder="Jane" required value="<%= locals.account_firstname %>">
                    </div>

                    <!-- Last Name -->
                    <div class="form-group">
                        <label for="account_lastname">Last Name</label>
                        <input type="text" id="account_lastname" name="account_lastname" placeholder="Doe" required value="<%= locals.account_lastname %>">
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="account_email">Email Address</label>
                        <input type="email" id="account_email" name="account_email" placeholder="jane.doe@domain.com"
                            required value="<%= locals.account_email %>">
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label for="account_password">Password</label>

                        <!-- Password help BEFORE the input, using a div as requested -->
                        <div id="passwordHelp" class="form-text password-help">
                            <p>Passwords must be at least 12 characters and contain at least:
                            1 number, 1 capital letter, and 1 special character.</p>
                        </div>

                        <input type="password" id="account_password" name="account_password" required
                            aria-describedby="passwordHelp"
                            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                            title="At least 12 characters with 1 number, 1 uppercase letter, and 1 special character.">

                        <!-- Optional: toggle password visibility -->
                        <button type="button" id="togglePassword" class="btn btn-secondary btn-toggle-password">
                            Show Password
                        </button>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Create Account
                    </button>
                </form>
            </section>
</main>